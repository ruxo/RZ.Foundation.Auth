@inherits ReactiveUI.Blazor.ReactiveComponentBase<PasswordResetViewModel>

<MudStack Style="height: 100%">
    <MudText Typo="Typo.h1" Style="font-size: 2em">Reset Password</MudText>
    <MudText Typo="Typo.body1">Please enter your login email. If your email is in the system, then a password reset email will be sent to you.</MudText>
    <MudTextField Variant="Variant.Filled"
                  Validation="ViewModel!.EmailValidation" Disabled="ViewModel!.IsSending"
                  Label="Email" @bind-Value="ViewModel!.Email"/>
    <MudSpacer/>
    <MudStack Row>
        <MudButton Class="flex-grow-1" Variant="Variant.Filled" Color="Color.Primary"
                   StartIcon="@Icons.Material.Filled.Email"
                   Disabled="ViewModel!.IsSending"
                   OnClick="@ViewModel!.SendPasswordResetEmail">Confirm Email</MudButton>
        <MudButton Class="flex-grow-1" Variant="Variant.Outlined" Color="Color.Secondary" StartIcon="@Icons.Material.Filled.DoorBack"
                   Disabled="ViewModel!.IsSending"
                   OnClick="@ViewModel!.Cancel">Return</MudButton>
    </MudStack>
</MudStack>
