@page "/auth/line"
@layout FirebaseLayout

@inherits ReactiveUI.Blazor.ReactiveComponentBase<LineAuthViewModel>

@rendermode @(new InteractiveServerRenderMode(prerender: false))

@if (ViewModel!.Status is ViewStatus.Failed){
    <MudText>Authentication failed. Please try again.</MudText>
    <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="@ViewModel!.ReturnUrl">Back</MudButton>
}